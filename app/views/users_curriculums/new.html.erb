<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="thumbnail">
        <div class="caption regist">
            <%= simple_form_for @users_curriculum ,:url => {:action => :create}, :html => { :class => 'form-horizontal' } do |f| %>
            <div class="form">
                <p><%= f.input :user_id, input_html: { value: "#{@user.id}" } %></p>
                <p><%= f.input :curriculum_id %></p>
                <p><%= f.button :submit, "submit", :class=>"btn btn-info btn-sm" %></p>
            </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="thumbnail">
        <div class="caption regist">
          <table class="table">
              <thead>
                  <tr>
                      <th>id</th>
                      <th>Curriculum Name</th>
                      <th>Term</th>
                      <th>Price</th>
                  </tr>
              </thead>
              <tbody>
                  <% @curriculum.each do |data| %>
                    <div class="edit-form">
                      <tr>
                        <th><%= data.id %></th>
                        <td><%= data.c_name %></td>
                        <td><%= data.term %></td>
                        <td><%= data.price %></td>
                      </tr>
                    </div>
                  <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
