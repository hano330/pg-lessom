<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="thumbnail">
        <div class="caption regist">
              <h3 class="text-center">Choose level</h3>
              <hr>
              <div class="text-center">
              <%= form_tag("/users/#{@user.id}/users_curriculums/#{@selected_curriculums.id}", method: :patch) do %>
                <p><%= @selected_curriculums.curriculum.c_name %>&nbsp;&nbsp;&nbsp;
                  <%= number_field_tag 'skill', @selected_curriculums.skill, in: 20..100, :step => 20 %>
                  &nbsp;&nbsp;&nbsp;<%= submit_tag "submit", :class=>"btn btn-info btn-sm" %>
                  <%= link_to 'delete', "/users/#{@user.id}/users_curriculums/#{@selected_curriculums.id}", method:'delete' ,:class=>"btn btn-danger btn-sm" %></p>
              <% end %>

              </div>
              <hr>
              <div class="container-fluid">
                <div class="col-sm-2">100%</div>
                <div class="row col-sm-10">
                  <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%; background-color:#00CCCC" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">PERFECT!!</div>
                  </div>
                </div>
              </div>
              <div class="container-fluid">
                <div class="col-sm-2">80%</div>
                <div class="row col-sm-10">
                  <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 80%; background-color:#1E90FF" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">EXCELENT</div>
                  </div>
                </div>
              </div>
              <div class="container-fluid">
                <div class="col-sm-2">60%</div>
                <div class="row col-sm-10">
                  <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 60%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">GOOD</div>
                  </div>
                </div>
              </div>
              <div class="container-fluid">
                <div class="col-sm-2">40%</div>
                <div class="row col-sm-10">
                  <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 40%; background-color:#FF6633	" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">SOSO</div>
                  </div>
                </div>
              </div>
              <div class="container-fluid">
                <div class="col-sm-2">20%</div>
                <div class="row col-sm-10">
                  <div class="progress">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 20%; background-color:#DD0000" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">BAD</div>
                  </div>
                </div>
              </div>
          </div>
        </div>
    </div>
  </div>
</div>
