<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="thumbnail">
        <div class="caption regist">
          <table class="table">
              <h3 class="text-center"><%= @user.u_name %></h3>
              <thead>
                  <tr>
                      <th>Selected Curriculums</th>
                      <th>Price</th>
                      <th></th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>
                <% @selected_curriculums.each do |data| %>
                  <div class="edit-form">
                    <tr>
                      <td><%= data.curriculum.c_name %></td>
                      <td><%= data.curriculum.price %></td>
                      <td><%= link_to 'edit' %></td>
                      <td><%= link_to 'delete', "/users/#{@user_id}/users_curriculums/#{data.id}" , method:'delete'  %></td>
                    </tr>
                  </div>
                <% end %>
              </tbody>
          </table>
          <hr>
          <h3 class="text-center">Skill</h3>
          <div class="progress">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 60%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">HTML</div>
          </div>
          <div class="progress">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 10%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">CSS</div>
          </div>
          <div class="progress">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 50%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Sass</div>
          </div>
          <div class="progress">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 80%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Ruby</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
