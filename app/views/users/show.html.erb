<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="thumbnail">
        <div class="caption regist">
          <table class="table">
              <h3 class="text-center"><%= @user.u_name %></h3>
              <thead>
                  <tr>
                      <th>Selected Curriculums</th>
                      <th>Price</th>
                      <th>term</th>
                  </tr>
              </thead>
              <tbody>
                <% @selected_curriculums.each do |data| %>
                  <div class="edit-form">
                    <tr>
                      <td><%= data.curriculum.c_name %></td>
                      <td><%= data.curriculum.price %></td>
                      <td>2018/4/30~2018/5/30</td>
                    </tr>
                  </div>
                <% end %>
              </tbody>
          </table>
          <hr>
          <h3 class="text-center">Skill</h3>
          <% @selected_curriculums.each do |data| %>
            <div class="progress">
              <div class="progress-bar bg-danger" role="progressbar" style="width: <%= data.skill %>%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"><%= data.curriculum.c_name %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
