<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="thumbnail">
        <div class="caption regist">
            <%= simple_form_for user ,:url => {:action => :update}, :html => { :class => 'form-horizontal' } do |f| %>
              <div class="form">
                  <p><%= f.input :u_name %></p>
                  <p><%= f.input :age %></p>
                  <%= f.button :submit, "submit", :class=>"btn btn-info btn-sm" %>
              </div>
            <% end %>
            <hr>
            <%= simple_form_for @selected_curriculums, :url => {:action => :update}, :html => { :class => 'form-horizontal'} do |f| %>
              <p><%= f.input :c_name %></p>
              <%= data.curriculum.c_name %>
            <% end %>
            <hr>
            <p class="text-center"><%= link_to 'add curriculum', "/users/#{@user.id}/users_curriculums/new", :class=>"btn btn-info btn-sm" %></p>
          </div>
        </div>
    </div>
  </div>
</div>
