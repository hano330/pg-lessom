<h2 class="text-center">User Edit</h2>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="thumbnail">
        <div class="caption regist">
            <%= simple_form_for @user ,:url => {:action => :update}, :html => { :class => 'form-horizontal' } do |f| %>
              <div class="form">
                  <p><%= f.input :u_name %></p>
                  <p><%= f.input :age %></p>
              </div>
              <p class="text-center"><%= f.button :submit, "submit", :class=>"btn btn-info btn-sm" %></p>
            <% end %>
            <hr>
            <div class="form">
              <% @selected_curriculums.each do |data| %>
                <p><%= data.curriculum.c_name %><%= link_to 'edit', "/users/#{data.user_id}/users_curriculums/#{data.id}/edit", :class=>"btn btn-info btn-sm" %></p>
              <% end %>
            </div>
            <hr>
            <p class="text-center"><%= link_to 'add curriculum', "/users/#{@user.id}/users_curriculums/new", :class=>"btn btn-info btn-sm" %></p>
          </div>
        </div>
    </div>
  </div>
</div>
